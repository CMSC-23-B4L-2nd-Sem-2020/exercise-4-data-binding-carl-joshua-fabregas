<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="SlumBook"
            type="com.example.fabregas_exer4.SlumBook" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/Hello_Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_uwu"
                    android:text="@string/hello"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_uwu2"
                    android:text="@={SlumBook.name}" />

                <EditText
                    android:id="@+id/name_entry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Enter Name"
                    android:inputType="textPersonName"
                    android:padding="@dimen/padding_uwu2" />

                <TextView
                    android:id="@+id/nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_uwu2"
                    android:text="@={SlumBook.nickname}"
                    />

                <EditText
                    android:id="@+id/nickname_entry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Enter Nickname"
                    android:inputType="textPersonName"
                    android:padding="@dimen/padding_uwu2" />

                <TextView
                    android:id="@+id/age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_uwu2"
                    android:text="@={SlumBook.age}" />

                <EditText
                    android:id="@+id/age_entry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Enter Age"
                    android:inputType="textPersonName"
                    android:padding="@dimen/padding_uwu2" />

                <TextView
                    android:id="@+id/biirthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_uwu2"
                    android:text="@string/when_is_your_birthday" />

                <EditText
                    android:id="@+id/birthday_entry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/enter_birthday"
                    android:inputType="textPersonName"
                    android:padding="@dimen/padding_uwu2" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_uwu2"
                    android:text="@string/phone_number" />

                <EditText
                    android:id="@+id/phone_entry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/enter_phone_number"
                    android:inputType="textPersonName"
                    android:padding="@dimen/padding_uwu2" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_uwu2"
                    android:text="@string/what_is_your_email_address" />

                <EditText
                    android:id="@+id/email_entry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/enter_email_address"
                    android:inputType="textPersonName"
                    android:padding="@dimen/padding_uwu2" />

                <TextView
                    android:id="@+id/course"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_uwu2"
                    android:text="@string/what_is_your_course" />

                <EditText
                    android:id="@+id/course_entry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/enter_course"
                    android:inputType="textPersonName"
                    android:padding="@dimen/padding_uwu2" />

                <TextView
                    android:id="@+id/dream"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_uwu2"
                    android:text="@string/what_is_your_ultimate_dream" />

                <EditText
                    android:id="@+id/dream_entry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/enter_dream"
                    android:inputType="textPersonName"
                    android:padding="@dimen/padding_uwu2" />

                <TextView
                    android:id="@+id/crush"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_uwu2"
                    android:text="@string/who_is_your_crush" />

                <EditText
                    android:id="@+id/crush_entry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/enter_name_of_crush"
                    android:inputType="textPersonName"
                    android:padding="@dimen/padding_uwu2" />

                <TextView
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_uwu2"
                    android:text="@string/what_is_your_message_for_me" />

                <EditText
                    android:id="@+id/name_entry9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:padding="@dimen/padding_uwu2" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/done" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>